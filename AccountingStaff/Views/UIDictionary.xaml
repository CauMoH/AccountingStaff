<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AccountingStaff.Views"
                    xmlns:converters="clr-namespace:AccountingStaff.Views.Converters">

    <BooleanToVisibilityConverter x:Key="Bool2VisibilityConverter" />

    <converters:OpenedDepartmentTextConverter x:Key="OpenedDepartmentTextConverter"/>
    <converters:DataTypeConverter x:Key="DataTypeConverter"/>


    <SolidColorBrush x:Key="SelectedExpired" Color="#ffa0b3"/>
    <SolidColorBrush x:Key="NoSelectedExpired" Color="#ffb8c2"/>
    <SolidColorBrush x:Key="NoSelectedNoExpired" Color="#f9f0ff"/>
    <SolidColorBrush x:Key="SelectedNoExpired" Color="#e8eeff"/>


</ResourceDictionary>